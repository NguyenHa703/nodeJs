<div class='mt-4'>
    <h3>Product List</h3>
    <div class='row gy-2 mt-4'>
        {{#each products}}
        <div class='col-sm-6 col-lg-4 mt-4 text-light'>
            <div class='card card-course-item bg-secondary'>
                <a href='/products/{{this._id}}'>
                    <img class='card-img-top' src='{{this.image}}' alt='{{this.name}}' /></a>

                <div class='card-body text-center'>
                    <h5 class='card-title'>{{this.name}}</h5>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='/products/{{this._id}}' class='btn btn-primary'>Xem ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>